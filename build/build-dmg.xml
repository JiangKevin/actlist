	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="actlist.jar"/>
			<fx:fileset dir="dist" includes="actlist.jar.config"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<!--
			<fx:fileset dir="dist" includes="plugins/*"/>
			<fx:fileset dir="dist" includes="resources/*"/>
			-->
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="Actlist"
			mainClass="org.silentsoft.actlist.application.App"
			version="1.2.3"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/actlist.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Silentsoft"/>
				<attribute name="Implementation-Title" value="Actlist"/>
				<attribute name="Implementation-Version" value="1.2.3"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="actlist" nativeBundles="dmg"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="actlist" vendor="Silentsoft"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
